<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/black"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/rounded_shape"
        android:backgroundTint="@color/grey_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/prices_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@drawable/search_icon_dark" />
        <ImageView
            android:id="@+id/prices_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/prices_back_arrow"
            android:src="@drawable/divider_search"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prices_swap"
            android:layout_alignEnd="@+id/prices_divider"
            android:layout_alignBottom="@+id/prices_search_from"
            android:layout_marginBottom="0dp"
            android:src="@drawable/hot_icon" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prices_erase"
            android:layout_alignEnd="@+id/prices_divider"
            android:layout_alignBottom="@+id/prices_search_to"
            android:layout_marginBottom="0dp"
            android:src="@drawable/hot_icon" />

        <TextView
            android:id="@+id/prices_search_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="11dp"
            android:layout_toEndOf="@+id/prices_back_arrow"
            android:text="Ростов-на-Дону"
            android:textColor="@color/white"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/prices_search_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prices_search_from"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="17dp"
            android:layout_toEndOf="@+id/prices_back_arrow"
            android:text="Москва"
            android:textColor="@color/white"
            android:textSize="20sp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>